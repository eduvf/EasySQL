{
  "name": "easysql",
  "productName": "EasySQL",
  "version": "1.0.0",
  "description": "A simple app to manage SQL databases through the TDS protocol.",
  "main": "app/main.js",
  "build": {
    "appId": "com.github.eduvf.easysql",
		"productName": "EasySQL",
		"linux": {
			"target": ["AppImage"]
		}
  },
  "scripts": {
    "css-watch": "tailwindcss -i ./src/in.css -o ./app/out.css --watch",
    "elec": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "testbuild": "electron-builder --linux",
		"build": "electron-builder --windows --linux",
		"release": "electron-builder --windows --linux --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eduvf/EasySQL.git"
  },
  "author": "EduVF",
  "license": "Unlicense",
  "homepage": "https://github.com/eduvf/EasySQL#readme",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "electron": "^21.3.1",
    "electron-builder": "^23.6.0",
    "tailwindcss": "^3.2.4"
  }
}
